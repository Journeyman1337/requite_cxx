[entry_point
    [while [true]
        [infinite_loop 
            // break out of two loops
            [break 2]
        ]
    ]
    c:puts("Hello, world!")

    [local x r:i32 0]
    [for [empty][< x 4][+= x 1]
        [if [< x 2]
            // go back to start of loop
            [continue]
        ]
        // break out of loop
        [break]
    ]
    c:printf("its %d\n" x)
]